<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/small_padding"
    android:background="@drawable/comm_bg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/strikes_vh_gravity_rl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/strikes_vh_gravity_label"
            android:text="@string/activity_strike_gravity_label"
            android:textSize="@dimen/text_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_x_big"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/inter_view_small_margin"
            android:text="4"
            android:id="@+id/strikes_vh_gravity"
            android:textColor="@color/red"
            android:layout_below="@id/strikes_vh_gravity_label"
            android:layout_marginBottom="@dimen/inter_view_small_margin"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/strikes_vh_gravity_rl"
        android:layout_marginLeft="@dimen/inter_view_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/strikes_vh_message_label"
            android:text="@string/activity_strike_gravity_message_label"
            android:textSize="@dimen/text_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:textColor="@color/black"
            android:text="kdhkdsjhfkdshfkjhdsjhfkjdshkjfhdkjshfkjdhsjkfhkjdshjkfhdsjkhfkdjshfkjdhsjkfhkdjshfkjdhskjfhkdsf"
            android:layout_marginTop="@dimen/inter_view_small_margin"
            android:id="@+id/strikes_vh_message"
            android:layout_below="@id/strikes_vh_message_label"
            android:layout_marginBottom="@dimen/inter_view_small_margin"/>

    </RelativeLayout>

</RelativeLayout>