<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/small_padding">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_view_app_rl"
        android:layout_marginRight="@dimen/inter_view_margin">

        <ImageView
            android:layout_width="@dimen/profile_dimen_for_notification"
            android:layout_height="@dimen/profile_dimen_for_notification"
            android:src="@drawable/lalalalogo"
            android:id="@+id/notification_view_app_logo"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/notification_view_app_rl">
        
        <ImageView
            android:layout_width="@dimen/notification_type_image_dimen"
            android:layout_height="@dimen/notification_type_image_dimen"
            android:id="@+id/notification_view_type_notif_img"
            android:src="@drawable/ic_mode_edit_black_48dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/inter_view_small_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notification_view_app_name"
            android:text="@string/app_name"
            android:layout_toLeftOf="@id/notification_view_type_notif_img"
            android:textSize="@dimen/text_x_small"
            android:textStyle="bold"
            android:textColor="#777"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notification_view_text"
            android:layout_toLeftOf="@id/notification_view_type_notif_img"
            android:textSize="@dimen/text_small"
            android:text="fdsfdsfjdslkjfldsjfkljdlsjflkdsjlkfjdlskfjkdsjlkfjdklsjflsjldkjklf"
            android:layout_below="@id/notification_view_type_notif_img"
            android:textColor="#777"/>
    </RelativeLayout>

</RelativeLayout>