<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="cm.g2i.lalalaworker.ui.fragment.NoteDialog"
    android:padding="@dimen/activity_horizontal_margin">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/frag_note_dialog_note"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frag_note_dialog_note_btn"
            android:text="@string/worker_vh_note"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_below="@id/frag_note_dialog_note"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>
