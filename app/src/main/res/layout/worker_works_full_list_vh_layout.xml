<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/small_padding"
    android:background="@drawable/comm_bg">

    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/worker_works_full_list_vh_delete_work"
        android:text="@string/worker_works_full_list_vh_delete_work"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/inter_view_small_margin"
        android:drawableLeft="@drawable/ic_delete_forever_black_18dp"
        android:drawablePadding="@dimen/small_padding"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_small"
        android:layout_alignBaseline="@id/worker_works_full_list_vh_delete_work"
        android:id="@+id/worker_works_full_list_vh_work"
        android:text="Work"/>

</RelativeLayout>