<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="cm.g2i.lalalaworker.ui.fragment.ProfileImgChooserFragment"
    android:background="@color/colorPrimaryDark"
    android:padding="@dimen/small_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:id="@+id/frag_profile_img_chooser_gallery"
            android:drawableTop="@drawable/ic_photo_library_white_48dp"
            android:text="@string/profile_img_chooser_gallery"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_weight=".50"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:id="@+id/frag_profile_img_chooser_app_photo"
            android:drawableTop="@drawable/ic_photo_camera_white_48dp"
            android:text="@string/profile_img_chooser_appphoto"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_weight=".50"/>

    </LinearLayout>


</RelativeLayout>
