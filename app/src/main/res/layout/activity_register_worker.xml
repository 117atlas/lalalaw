<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cm.g2i.lalalaworker.ui.activities.RegisterWorkerActivity"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_register_worker">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_register_worker_label"
            android:id="@+id/activity_register_worker_label"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/small_padding"/>

        <ImageView
            android:layout_marginTop="@dimen/inter_view_margin"
            android:layout_width="@dimen/profile_width"
            android:layout_height="@dimen/profile_height"
            android:src="@drawable/lalalalogo"
            android:layout_centerHorizontal="true"
            android:id="@+id/activity_register_worker_logo"
            android:layout_below="@id/activity_register_worker_label"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_registry_worker_step1"
            android:id="@+id/activity_register_worker_step1"
            android:textSize="@dimen/text_small"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/inter_view_margin"
            android:layout_below="@id/activity_register_worker_logo"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_register_worker_rl"
            android:layout_below="@id/activity_register_worker_step1"
            android:paddingTop="@dimen/inter_view_small_margin"
            android:paddingLeft="@dimen/inter_view_small_margin">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_register_worker_til1"
                android:hint="@string/activity_register_worker_phone_label"
                android:textColorHint="@color/white">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_register_worker_phone"
                    android:inputType="phone"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/colorAccent"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_register_worker_til2"
                android:hint="@string/activity_register_worker_nationality_label"
                android:textColorHint="@color/white"
                android:layout_below="@id/activity_register_worker_til1">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_register_worker_nationality"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/colorAccent"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_register_worker_til3"
                android:hint="@string/activity_register_worker_town_label"
                android:textColorHint="@color/white"
                android:layout_below="@id/activity_register_worker_til2">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_register_worker_town"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/colorAccent"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_register_worker_til4"
                android:hint="@string/activity_register_worker_street_label"
                android:textColorHint="@color/white"
                android:layout_below="@id/activity_register_worker_til3">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_register_worker_street"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/colorAccent"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_register_worker_til5"
                android:hint="@string/activity_register_worker_passwd_label"
                android:textColorHint="@color/white"
                android:layout_below="@id/activity_register_worker_til4">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_register_worker_passwd"
                    android:textColor="@color/white"
                    android:inputType="textPassword"
                    android:textColorHighlight="@color/colorAccent"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_register_worker_til6"
                android:hint="@string/activity_register_worker_confirmpasswd_label"
                android:textColorHint="@color/white"
                android:layout_below="@id/activity_register_worker_til5">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:id="@+id/activity_register_worker_confirmpasswd"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/colorAccent"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_register_worker_rl2"
            android:paddingTop="@dimen/inter_view_margin"
            android:paddingLeft="@dimen/inter_view_margin"
            android:layout_below="@id/activity_register_worker_rl">

            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/activity_register_worker_accept_conditions_text"
                android:textSize="@dimen/text_small"
                android:textColor="@color/white"
                android:id="@+id/activity_register_worker_accept_conditions" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/activity_register_worker_accept_conditions"
                android:layout_toRightOf="@id/activity_register_worker_accept_conditions"
                android:layout_marginLeft="@dimen/small_padding"
                android:textSize="@dimen/text_small"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:clickable="true"
                android:text="@string/activity_register_worker_conditions_link"
                android:id="@+id/activity_register_worker_conditions_link" />

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/MyRaisedButtons"
                android:textColor="@color/white"
                android:text="@string/activity_register_worker_continue"
                android:id="@+id/activity_register_worker_create_account"
                android:layout_below="@id/activity_register_worker_accept_conditions"
                android:layout_marginTop="@dimen/inter_view_margin"
                android:layout_marginRight="@dimen/inter_view_margin"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>

