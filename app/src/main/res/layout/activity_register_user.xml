<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentLight"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cm.g2i.lalalaworker.ui.activities.RegisterUserActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/activity_register_user_rl"
        android:layout_marginTop="@dimen/inter_view_big_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_register_user_welcome"
            android:id="@+id/activity_register_user_welcome"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_marginTop="@dimen/inter_view_margin"
            android:layout_width="@dimen/profile_width_big"
            android:layout_height="@dimen/profile_height_big"
            android:src="@drawable/lalalalogobleu"
            android:layout_below="@id/activity_register_user_welcome"
            android:layout_centerHorizontal="true"
            android:id="@+id/activity_register_user_logo"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/m_small_padding"
            android:layout_centerInParent="true">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/activity_register_user_name_hint"
                android:id="@+id/activity_register_user_til"
                android:textColorHint="@color/white"
                app:theme="@style/TabLayoutStyle">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:id="@+id/activity_register_user_name"/>

            </android.support.design.widget.TextInputLayout>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@id/activity_register_user_til"
                android:textSize="@dimen/text_small"
                android:text=""
                android:id="@+id/activity_register_user_name_validator"/>

        </RelativeLayout>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_register_user_continue"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="@string/activity_register_user_continue"
            android:theme="@style/MyRaisedButtons"
            android:textColor="@color/white"/>

    </RelativeLayout>

</RelativeLayout>
